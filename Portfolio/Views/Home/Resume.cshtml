@{
    ViewData["Title"] = "Resume";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #3577DA;
        }

        .background-image {
            background-image: url(../Images/portfolio_background_compressed.svg);
            position: absolute;
            top: 0px;
            right: 0px;
            height: 100%;
            width: 100vw;
            background-repeat: no-repeat;
            z-index: -1;
        }
    </style>
    <meta name="author" content="Ethan Partridge" />
    <meta name="description" content="Ethan Partridge's full-stack ASP.NET Core C# web developer resume. Download the resume PDF or open the resume in a new tab. Feel free to contact me." />
    <meta name="keywords" content="resume, full-stack developer, fullstack developer, web developer, C#, ASP.NET Core, Ethan Partridge, download, PDF, CSharp, DotNet" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body>
    <div class="blurred-background"></div>
    <div class="background-image"></div>
    <div class="header-spacer"></div>

    <div class="resume-page-container animated-body">
        <div class="pdf-links-container">
            <a class="pdf-link pdf-tab" href="~/PDFs/Resume.pdf" target="_blank" rel="noreferrer noopener">Click here to open my Resume PDF in a new tab<img src="~/Images/fa-solid_external-link-alt.svg" /></a>
        </div>
        <div class="pdf-links-container">
            <a class="pdf-link pdf-download" href="~/PDFs/Resume.pdf" download="~/PDFs/Resume.pdf">Click here to download my Resume PDF<img src="~/Images/feather_download.svg" /></a>
        </div>
        <embed id="Resume-PDF" src="~/PDFs/Resume.pdf" />
    </div>
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfobject/2.2.7/pdfobject.min.js" integrity="sha512-g16L6hyoieygYYZrtuzScNFXrrbJo/lj9+1AYsw+0CYYYZ6lx5J3x9Yyzsm+D37/7jMIGh0fDqdvyYkNWbuYuA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script type="text/javascript">
    PDFObject.embed("/PDFs/Resume.pdf", "#Resume-PDF");
</script>